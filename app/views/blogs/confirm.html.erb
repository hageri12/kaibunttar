<div class="container-fluid top-height"> 
 <row>
  <div>
    <h3 class="col-md-2 col-md-offset-5">これでつぶやく!！</h3>
  </div>
 </row>
</div>

<div class="container"> 
 <div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@blog) do |f| %>
      <%= f.hidden_field :content %>
      <p><%= @blog.content %></p>
      <%= f.submit "投稿する",class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= form_for(@blog, url: new_blog_path, method: 'get') do |f| %>
      <%= f.hidden_field :content %>
      <%= f.submit "もどる", name: 'back',class: 'btn btn-success btn-block ' %>
    <% end %>
  </div>
 </div>
</div>
 
      
