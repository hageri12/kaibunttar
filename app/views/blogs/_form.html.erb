<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
 
<div class="container"> 
 <div class="row">
  <div class="col-md-4 col-md-offset-4">
     <%= f.label :内容 %>
     <%= f.text_field  :content, class: 'form-control input-lg' %>
     <br>
     <%= f.submit'投稿', class: 'btn btn-primary btn-block'%>
  </div>
 </div>
</div>
<div class="container"> 
 <row>
  <div class="col-md-4 col-md-offset-4">
    <% if @blog.errors.any? %>
       <div>
           <h2><%= @blog.errors.count %>件のエラーがあります！</h2>
           <ul>
            <% @blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
           </ul>
       </div>
     <% end %> 
 </div>
</div>
<% end %>
