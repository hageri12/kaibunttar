<% if notice  %>
  <p class ="alert alert-success notice"><%= notice %></p>
 <% end %>

<section class="container-fluid index-body">
 <div class="row">
  <div class="col-md-4 col-md-offset-1  col-sm-12">
    <div>
      <h1>Kaibunttarへようこそ！</h1>
      <h4>Kaibunntarは、つぶやきが逆の並びになって表示されるアプリです！</h4>
      <br>
      <h4>つぶやきが回文になっているとスタンプがもらえるよ！</h4>
      <h4>回文以外はうんこあらがでるよ！</h4>
      <br>
      <h4>回文ってなにって？知るな！感じろ！</h4>
     </div>
    <div class="col-md-4 col-md-offset-3 btn-box">
       <%= link_to "新規投稿", new_blog_path, class: 'btn-lg btn-primary btn-block topbtn' %>
     </div>
  </div>
  
  
  <div class="col-md-4 col-md-offset-2 container　col-sm-12">
        <h2 class="index-h2">つぶやき一覧</h2>
        <% @blog.reverse_each do |blog| %>
          <div class="tubuyaki row">
             <div class="col-md-6 col-sm-12"><%= blog.content.reverse! %></div>
             <% if blog.content == blog.content.reverse %>
               <%= image_tag asset_path("kaibun.png"), class: "col-md-3 col-md-offset-3 col-sm-9" %>
             <% else %>
               <%= image_tag asset_path("unko.jpg"), class: "col-md-3 col-md-offset-3 col-sm-9" %>
             <% end %>
          </div>
          <div class="row">
             <%= link_to "編集する", edit_blog_path(blog.id), class: 'btn-sm btn-success btn-block col-md-3 index-btn col-sm-12' %>
             <%= link_to "削除する", blog_path(blog.id), method: :delete, data:{confirm:'本当に削除しますか'} ,class: 'btn-sm btn-danger btn-block col-md-3 index-btn col-sm-12' %>
          </div>
          <br>
          <br>
         <% end %>
 </div>
</section>

